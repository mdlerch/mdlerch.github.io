set arrow nohead from screen xx, yy to screen xx + dx, yy - dy lw 8 lc rgb "green"

t = 3
s = 1
yy = yi - t*dy
xx = xi + 2*s*dx - t*dx
set object circle at screen xx, yy fc rgb "green" size .06


t = 7
